<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"

    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp"
    card_view:cardBackgroundColor="@color/colorAccent"


    android:id="@+id/cvProductos"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/ivCvProduct"
            android:layout_width="168dp"
            android:layout_height="155dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lagunas" />

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/ivCvProduct"
            android:layout_alignRight="@id/ivCvProduct"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="-311dp"
            android:layout_marginRight="-147dp"
            android:layout_toEndOf="@+id/ivCvProduct"
            android:layout_toRightOf="@+id/ivCvProduct"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvTitleProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="Lattle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/negro"/>

            <TextView
                android:id="@+id/tvDescriptionProduct"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:text="Lattlejjsjsjjsjsjsjsjsjshhhhhhhhhhhhhhhhhhhhh "
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/negro"/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>